[core]
  pager = lv -c
  editor = nvim -c \"set fenc=utf-8\"
  attributesfile = ~/.gitattributes_global
[user]
	name = nmurayama
	email = norichika.murayama@play.jp
[color]
  ui = auto
[pager]
  branch = cat
  # log = diff-highlight | less
  # show = diff-highlight | less
  # diff = diff-highlight | less

#[diff]
#  external = git_diff_wrapper
#[pager]
#  diff =
[alias]
  graph = log --graph --all --pretty=format:'%Cgreen%h%Creset %cn %s %Cred%d%Creset'
  co = checkout
  br = branch -v
  sb = show-branch
  ci = commit --allow-empty
  cia = commit --amend
  s = status
  st = !git status -s -b && echo --- branch && git branch -v && echo --- stash && git stash list | cat
  logp = log -p
  logs = log --stat
  logone = log --decorate --pretty=oneline
  f = flow
  stash = stash -u -k
  stashpop = stash pop --index
  remotes = remote -v
  newbrunch = checkout -b
  delbrunch = branch -d
  pruneremote = remote prune
  ag = !git ls-files | xargs ag
  fetchp = fetch -p
[i18n]
  commitencoding = utf-8
  logoutputencoding = utf-8
[http]
  sslVerify = true
[diff]
  tool = nvimdiff
  algorithm = histogram
[difftool "nvimdiff"]
  cmd = "nvim -R -d -c \"wincmd l\" -d \"$LOCAL\" \"$REMOTE\""
[mergetool "nvimdiff"]
  cmd = "nvim -d -c \"4wincmd w | wincmd J\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"  \"$MERGED\""
# [difftool "sourcetree"]
#   cmd = opendiff \"$LOCAL\" \"$REMOTE\"
#   path = 
# [mergetool "sourcetree"]
#   cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
#   trustExitCode = true
[merge]
  tool = nvimdiff
  conflictstyle = diff3
  ; ff = false
[pull]
	rebase = false
[ghq]
  root = ~/src
  # root = ~/.go/src
[push]
  default = matching
[secrets]
	providers = git secrets --aws-provider
	patterns = (A3T[A-Z0-9]|AKIA|AGPA|AIDA|AROA|AIPA|ANPA|ANVA|ASIA)[A-Z0-9]{16}
	patterns = (\"|')?(AWS|aws|Aws)?_?(SECRET|secret|Secret)?_?(ACCESS|access|Access)?_?(KEY|key|Key)(\"|')?\\s*(:|=>|=)\\s*(\"|')?[A-Za-z0-9/\\+=]{40}(\"|')?
	patterns = (\"|')?(AWS|aws|Aws)?_?(ACCOUNT|account|Account)_?(ID|id|Id)?(\"|')?\\s*(:|=>|=)\\s*(\"|')?[0-9]{4}\\-?[0-9]{4}\\-?[0-9]{4}(\"|')?
	allowed = AKIAIOSFODNN7EXAMPLE
	allowed = wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
[init]
	templatedir = ~/.git-templates/git-secrets
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
